    });

    function openWhatsApp(productName, productPrice) {
      const whatsappNumber = '923392011093';
      const message = `Hello, I'm interested in "${productName}" priced at ${productPrice}. Please share details.`;
      const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
      window.open(whatsappUrl, '_send order message to this number 03392010193');
    }
